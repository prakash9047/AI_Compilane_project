# Application Settings
APP_NAME=AI Compliance Engine
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8501"]

# Database (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./data/compliance.db

# File Storage
UPLOAD_DIR=./data/raw
PROCESSED_DIR=./data/processed
EMBEDDINGS_DIR=./data/embeddings
REPORTS_DIR=./data/reports
COMPLIANCE_RULES_DIR=./data/compliance_rules

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/ML Models
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_PROVIDER=openai  # openai or anthropic
LLM_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_TOKENS=4096
TEMPERATURE=0.1

# OCR Settings
TESSERACT_PATH=/usr/bin/tesseract  # Windows: C:\\Program Files\\Tesseract-OCR\\tesseract.exe
OCR_LANGUAGE=eng+hin
OCR_DPI=300

# Document Processing
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,png,jpg,jpeg,xbrl
BATCH_SIZE=10
MAX_CONCURRENT_TASKS=5

# Compliance Rules
COMPLIANCE_RULES_PATH=./data/compliance_rules

# Storage
UPLOAD_DIR=./data/raw
PROCESSED_DIR=./data/processed
REPORT_DIR=./data/reports

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=True

# Frontend
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
