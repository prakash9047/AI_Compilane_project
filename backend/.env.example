# Application Settings
APP_NAME=AI Compliance Engine
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Security
SECRET_KEY=your-secret-key-here-min-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/compliance.db

# ChromaDB Vector Store
CHROMA_PERSIST_DIRECTORY=./data/embeddings
CHROMA_COLLECTION_NAME=compliance_documents

# AI/ML Configuration
# IMPORTANT: Add your OpenAI API key here for chatbot functionality
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=

LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_TOKENS=4096
TEMPERATURE=0.1

# OCR Settings
TESSERACT_PATH=
OCR_LANGUAGE=eng+hin
OCR_DPI=300

# Document Processing
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,png,jpg,jpeg,xbrl
BATCH_SIZE=10
MAX_CONCURRENT_TASKS=5

# Paths
COMPLIANCE_RULES_PATH=./data/compliance_rules
UPLOAD_DIR=./data/raw
PROCESSED_DIR=./data/processed
REPORT_DIR=./data/reports

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=True
